{% extends 'base.html.twig' %}

{% block title %}Confirmation désactivation utilisateur{% endblock %}

{% block body %}
{% include "include/retour.html.twig" %}
{% include "include/notif.html.twig" %}

<div class="min-h-screen flex flex-col justify-center bg-gray-100">
    <div class="px-10 w-96 p-4 shadow-2xl mx-auto rounded-2xl bg-white">
        <div class="text-2xl m-3 font-extrabold text-center">
            <h1 class="">Voulez-vous vraiment désactiver l'utilisateur {{ utilisateurID.username }} ?</h1>
        </div>
        <div class="mt-5">
            <form action="{{ path('remove_user', {'id':utilisateurID.id}) }}" method="POST">                

                <div class="container w-full mt-9 mb-5 flex justify-end">
                    <input type="submit" value="Désactiver" class="border border-red-400 bg-red-50 shadow-md rounded p-1.5 px-6 mr-3 hover:bg-red-400 transition duration-200">
                
                    </form>
                    <form action="{{ path('utilisateur') }}" method="POST">
                        <input type="submit" value="Annuler" class="border border-blue-400 bg-blue-50 shadow-md rounded p-1.5 px-6 hover:bg-blue-400 transition duration-200">
                </div>
            </form>
        </div>
    </div>
</div>

{% endblock %}
