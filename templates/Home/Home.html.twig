{% extends "base.html.twig" %}

{% block title %}login{% endblock %}

{% block body %}
<div class="min-h-screen flex flex-col justify-center">
    <div class="px-10 h-96 w-96 p-4 shadow-2xl mx-auto rounded-2xl">
        <div class="text-2xl m-3 font-extrabold ">
            <h1 class=""> Connexion </h1>
        </div>

        {% if app.user %}
            <div>
                <a href="{{ path('app_logout') }}"> Logout </a>
            </div>
        {% else %}
        
        <div class="mt-7">
            <form novalidate method='POST'>
                <div class="mb-3">
                    <label for="username">Username :</label><br>
                    <input type="text" name="username" id="username" value="{{ app.session.get(
                        'app_login_form_old_username') }}" class="border border-blue-400 shadow-md rounded mt-1 w-full p-1.5" required autofocus>
                </div>
                <div class="mb-3">
                    <label for="username">Password :</label><br>
                    <input type="password" name="password" id="password" class="border border-blue-400 shadow-md rounded mt-1 w-full p-1.5" required>
                </div>

                <input type="hidden" name="csrf_token" value="{{ csrf_token('login_form') }}">

                <div class=" w-full">
                    <input type="submit" value="connexion" class="border border-blue-400 shadow-md rounded p-1.5 mt-1">
                </div>
            </form>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}