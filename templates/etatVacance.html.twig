{% extends 'base.html.twig' %}

{% block title %}Hello UtilisateurController!{% endblock %}

{% block body %}
{% include "include/retour.html.twig" %}
{% include "include/notif.html.twig" %}

<div class="min-h-screen flex flex-col justify-center bg-gray-100">
    <div class="px-10 w-96 p-4 shadow-2xl mx-auto rounded-2xl bg-white">
        <div class="text-2xl m-3 font-extrabold text-center">
            <h1 class="">Autorisation de vacance</h1>
        </div>
        <div class="mt-5">
            <div class="container w-full mt-9 mb-5 flex justify-end">
                <form action="{{ path('autorise_vacance',{'id':vacanceID.id}) }}" method="POST">         
                        <input type="submit" value="Autoriser" class="border border-red-400 bg-red-50 shadow-md rounded p-1.5 px-6 mr-3 hover:bg-red-400 transition duration-200">
                </form>

                <form action="{{ path('nonAutorise_vacance',{'id':vacanceID.id}) }}" method="POST">
                    <input type="submit" value="Ne pas autoriser" class="border border-blue-400 bg-blue-50 shadow-md rounded p-1.5 px-6 hover:bg-blue-400 transition duration-200">
                </form>
            </div>
        </div>
    </div>
</div>

{% endblock %}
